<%= content_for(:title) do %>
  <%= @product.name %>
<% end %>
<h1><%= @product.name %> <small><%= number_to_currency @product.price_in_dollars %></small></h1>

<div class="row">
  <div class="col-xs-6">
    <%= image_tag @product.photo.large, class: "img-responsive" %>
  </div>
  <div class="col-xs-6">
    <p><%= @product.description %></p>

    <%= link_to "Add To Cart", add_to_cart_path(product_id: @product.id), method: :post, class: "btn btn-primary btn-block btn-lg" %>

  </div>
</div>
